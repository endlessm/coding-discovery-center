<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.10"/>
  <template class="Gjs_DiscoveryCenterSearch" parent="GtkBox">
    <property name="visible">True</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <style>
          <class name="toolbar"/>
        </style>
        <child>
          <object class="GtkSearchEntry" id="content-search">
            <property name="visible">True</property>
            <property name="placeholder-text">What do you want to learn?</property>
            <property name="width-request">300</property>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="tag-selection-bar">
            <property name="visible">True</property>
            <style>
              <class name="tag-selection"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
